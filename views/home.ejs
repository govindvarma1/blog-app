<%- include("partials/header")%>

<h1>Home</h1>
<p> <%= homeStartingContent%> </p>
<% for(var i=0; i<posts.length; i++){ %>
    <h1><%= posts[i].title %></h1>
    <%if(posts[i].body.length>100) { %>
        <p><%= posts[i].body.substring(0,160)%> <a href="/posts/<%= posts[i]._id%>">readmore...</a> </p>
    <% } else {%>
        <p><%= posts[i].body%></p>
    <%}%>
<% }%>

